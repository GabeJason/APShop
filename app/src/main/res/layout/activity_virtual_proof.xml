<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_virtual_proof"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.apshop.actionplus.apshop.VirtualProof"
    android:background="@color/whitecolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/customABVPL">

        <ImageButton
            android:layout_height="40dp"
            android:background="@drawable/backarrow"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:id="@+id/exitItemBtnVP"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Virtual Sample"
            android:textSize="30sp"
            android:textColor="@color/whitecolor"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toRightOf="@id/exitItemBtnVP"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewHoldingCanvas"
        android:layout_below="@id/customABVPL"
        android:layout_centerHorizontal="true">
        <com.apshop.actionplus.apshop.VPCanvas
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/VPCanvasView"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/viewHoldingCanvas"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/colorPickerLayoutVP"
            android:layout_alignParentTop="true">

            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color1"
                android:id="@+id/VPcolorC1"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="0dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color2"
                android:id="@+id/VPcolorC2"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color3"
                android:id="@+id/VPcolorC3"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC4"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC5"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC6"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC7"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC8"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC9"
                android:layout_margin="4dp"
                android:visibility="gone">
            </Button>
            <Button
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:text="Color4"
                android:id="@+id/VPcolorC10"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/VPlastLay">

            <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request More Information"
                android:id="@+id/VPreqMoreInfo"/>-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REQUEST PROOF"
                android:background="@color/whitecolor"
                android:textColor="@color/greenAccent"
                android:textSize="32sp"
                android:padding="10dp"
                android:id="@+id/VPreqBetProof"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@id/VPlastLay"
            android:id="@+id/logoUpVP"
            android:layout_marginBottom="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/uploadlogo"
                android:id="@+id/VPuploadImage"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Logo White Space"
                android:id="@+id/VPdeleteWhite"
                android:checked="true"
                android:textColor="#000000"/>
        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>
