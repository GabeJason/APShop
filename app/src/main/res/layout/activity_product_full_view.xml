<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_full_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.apshop.actionplus.apshop.ProductFullView"
    android:background="@color/whitecolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/customABPFVL">

        <ImageButton
            android:layout_height="40dp"
            android:background="@drawable/exitbtnimg"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:id="@+id/exitItemBtn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Action Plus"
            android:textSize="30sp"
            android:textColor="@color/whitecolor"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/itemNameABTV"/>

    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imagePFV"
        android:layout_below="@id/customABPFVL"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imagePFV"
        android:id="@+id/mainBtnLayPFV">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wishPFVBTN"
            android:text="Add to Wishlist"
            android:layout_weight="1"
            android:tag="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vrmodePFVBTN"
            android:text="View in VR"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainBtnLayPFV"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/titlePFVTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/descPFVTV"
            android:padding="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/prodNumPFVTV"
            android:padding="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/prodCatPFVTV"
            android:padding="10dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
