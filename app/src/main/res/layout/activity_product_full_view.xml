            android:id="@+id/itemNameABTV"/>-->

        <ImageButton
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:background="@drawable/googlecardboard"
            android:layout_margin="10dp"
            android:id="@+id/vrmodePFVBTN"
            android:layout_alignParentRight="true"/>

        <ImageButton
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:background="@drawable/addwishlist"
            android:layout_margin="10dp"
            android:id="@+id/wishPFVBTN"
            android:layout_toLeftOf="@id/vrmodePFVBTN"/>

        <Button
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:text="Virtual Proof"
            android:layout_margin="10dp"
            android:id="@+id/virtualProofPFVBTN"
            android:layout_toLeftOf="@id/wishPFVBTN"/>


    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imagePFV"
        android:layout_below="@id/customABPFVL"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imagePFV"
        android:background="@drawable/borderpfv"
        android:layout_margin="0dp"
        android:padding="0dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/titlePFVTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/descPFVTV"
            android:padding="20dp"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="21sp"
            android:textColor="@color/greenAccent"
            android:text="Category"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/prodCatPFVTV"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="21sp"
            android:textColor="@color/greenAccent"
            android:text="Product Number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/prodNumPFVTV"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark" />


    </LinearLayout>

    </ScrollView>

