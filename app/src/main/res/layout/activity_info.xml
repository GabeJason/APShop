<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_full_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.apshop.actionplus.apshop.ProductFullView"
    android:background="@color/whitecolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/customABPFVL">

        <ImageButton
            android:layout_height="40dp"
            android:background="@drawable/backarrow"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:id="@+id/exitItemBtn"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/actionpluslogo"
        android:id="@+id/imagePFV"
        android:layout_below="@id/customABPFVL"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imagePFV"
        android:background="@drawable/borderpfv"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/actionplusdesc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:textSize="21sp"
                android:textColor="@color/greenAccent"
                android:text="Contact Info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="(800) 425-2657\n(704) 536-8337\n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:textSize="21sp"
                android:textColor="@color/greenAccent"
                android:text="Product Number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/prodNumPFVTV"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
